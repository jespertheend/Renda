{
	"name": "game-engine",
	"author": "Jesper van den Ende",
	"license": "ISC",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "node build.js",
		"build-editor": "node editor/build.js",
		"build-editor-dependencies": "node editor/buildDependencies.js",
		"build-editor-dev": "node editor/build.js --dev",
		"dev": "concurrently --names 'BUILD,SERVE,DEVSOCKET,EDITORDISCOVERY' -c 'bgBlue.bold,bgGreen.bold,bgYellow.bold,bgMagenta.bold' 'node editor/build.js --dev' 'serve -l 8080 --no-port-switching -n' 'node editor/devSocket/index.js' 'node editor/EditorDiscoveryServer/index.js'",
		"typecheck": "tsc --noEmit -p ./jsconfig.json && tsc --noEmit -p editor/devSocket/jsconfig.json && tsc --noEmit -p editor/editorDiscoveryServer/jsconfig.json",
		"lint": "eslint .",
		"prepare": "husky install",
		"precommit": "git-format-staged --no-write -f 'eslint --stdin --stdin-filename \"{}\" >&2' '*.js' && npm run typecheck"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.16.3",
		"@rollup/plugin-commonjs": "^11.1.0",
		"@types/google-closure-compiler": "^0.0.19",
		"@types/js-md5": "^0.4.3",
		"@types/node": "^16.9.1",
		"@types/websocket": "^1.0.4",
		"@types/wicg-file-system-access": "^2020.9.2",
		"@webgpu/types": "^0.1.6",
		"concurrently": "5.x",
		"eslint": "^8.2.0",
		"eslint-plugin-jsdoc": "^37.0.3",
		"eslint-plugin-rulesdir": "github:not-an-aardvark/eslint-plugin-rulesdir",
		"git-format-staged": "^2.1.2",
		"google-closure-compiler": "^20210907.0.0",
		"husky": "^7.0.0",
		"js-md5": "^0.7.3",
		"rollup": "^2.47.0",
		"rollup-plugin-cleanup": "^3.2.1",
		"rollup-plugin-jscc": "^2.0.0",
		"rollup-plugin-resolve-url-objects": "^0.0.2",
		"serve": "^13.0.2",
		"typescript": "^4.4.3",
		"websocket": "^1.0.33"
	}
}
