{
	"extends": "./jsconfig.paths.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"target": "esnext",
		"checkJs": true,
		"typeRoots": [".denoTypes/@types"],
		"module": "esnext",
		"useDefineForClassFields": true,
		"strict": true,
		"baseUrl": "./",
	},
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"editor/src/**/*.js",
		"editor/src/**/*.ts",
	],
	"files": [
		"src/mod.js",
		"editor/src/network/editorConnections/internalDiscovery/InternalDiscoveryWorker.js",
		"editor/src/main.js",
	]
}
